<% restaurants = Restaurant.all.order(:restaurant_name) %>
<div>
  <div>
    <h1>
      Fork & Vine üçáüç∑üçΩÔ∏è
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Tell me more about where you are dining today
    </h2>

    <form action="/insert_session" method="post">
      <div>
        <label for="title_box">
          Occasion
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="query_restaurant">Choose a restaurant:</label>
        <select name="query_restaurant" id="query_restaurant" required>
        <option value="" disabled selected>Select a restaurant</option>
          <% restaurants.each do |restaurant| %>
          <option value="<%= restaurant.restaurant_name %>"><%= restaurant.restaurant_name %></option>
          <% end %>
      </select>
      </div>

      <div>
        <label for="owner_box">
          Owner
        </label>

        <input type="text" id="owner_box" name="query_owner">
      </div>

      <button>
        Create occasion
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table class="table table-bordered-centered" border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_sessions.each do |a_session| %>
      <tr>
        <td>
          <%= a_session.id %>
        </td>

        <td>
          <%= a_session.title %>
        </td>

        <td>
          <%= a_session.restaurant.restaurant_name %>
        </td>

        <td>
          <%= a_session.owner %>
        </td>

        <td>
          <%= time_ago_in_words(a_session.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_session.updated_at) %> ago
        </td>

        <td>
          <a href="/sessions/<%= a_session.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
